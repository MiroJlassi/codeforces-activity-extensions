{
  "manifest_version": 3,
  "name": "Codeforces File Grabber",
  "version": "1.0",
  "description": "Intercept file and push to GitHub",
  "permissions": [
    "downloads",
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Settings"
  },
  "content_scripts": [
    {
      "matches": ["*://codeforces.com/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "*://codeforces.com/*",
    "https://api.github.com/*"
  ]
}
